<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/line_lighter_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.samset.user.calendersample.views.CalendarView
            xmlns:calendarNS="http://schemas.android.com/apk/res/com.samset.user.calendersample"
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            calendarNS:dateFormat="MMMM yyyy"/>

    </LinearLayout>

</LinearLayout>
